# Use this for development
FROM golang:1.24-alpine

WORKDIR /app

# Install tools
RUN apk add --no-cache git ca-certificates

# Install air for hot reload
RUN go install github.com/cosmtrek/air@latest

# Copy go mod files
COPY go.mod go.sum ./
RUN go mod download

# Copy source code
COPY . .

EXPOSE 9090 8080

CMD ["air", "-c", ".air.toml"]
